<!DOCTYPE html>
<html>
  <head>
    <title>Courtney Topping</title>
    <link rel="stylesheet" href="css/foundation.css">
    <link rel='stylesheet' href='/css/style.css' />
  </head>
  <body data-sticky-container="">
    {{{body}}}

    
  {{!-- START HOME --}}
    <header class="grid-container full sticky" data-sticky data-margin-top="0" id="mainHeader">
      <div class="grid-x">
        <!--LOGO-->
        <h1 class="hide">Courtney Topping</h1>
        <div class="cell small-12 large-4 id="socialcon"">
          <a href="https://www.instagram.com"><img src="images/insta.svg" alt="Instagram" class="socials"></a>
          <a href="https://github.com/CourtneyTopping"><img src="images/github.svg" alt="Github" class="socials"></a>
          <a href="https://www.linkedin.com/in/courtney-topping-535791163/"><img src="images/linkedin.svg" alt="Linked In" class="socials"></a>
        </div>
        <div class="cell small-12 large-3" id="logo">
          <a href="index.html" id="homeLink">
            <img src="images/logo.svg" alt="logo" class="logoImg" width="100px">
          </a>
        </div>

         <!--MAIN NAV-->
        <nav class="show-for-large large-5" id="mainNav">
          <h2 class="hide">Main Navigation</h2>
          <ul id="menu">
            <li><a href="#homeLink">Home</a></li>
            <li><a href="#aboutLink">About</a></li>
            <li><a href="#portfolioLink">Portfolio</a></li>
            <li><a href="#contactLink">Contact</a></li>
          </ul>
        </nav>
      </div>
    </header>
    <!-- NAV ENDS -->

<!--SPLASH SECTION-->   
    <section class="grid-container full" id="promoSection">
      <div class="grid-x">
        <div class="cell small 12" id="promoText">
          <h2>Courtney Topping</h2>
          <h4>Project Management</h4>
        </div> 
      </div>
    </section>
<!--SPLASH ENDS--> 


<!-- ABOUT SECTION -->
    <a id="aboutLink"></a>
    <section class="grid-container full" id="aboutSection">
      <div class="grid-x large-12" id="aboutBox">
        <div class="cell small-12 large-3" id="aboutImg">
          <img src="images/me.png" alt="Me">
          {{!-- <img class="show-for-large" src="images/about_photo_large.png" alt="3D Product Image"> --}}
        </div>
        <div class="cell small-12 large-5" id="aboutText">
          <h2>Hello,</h2>
          <h3>here's a bit about me</h3>
          <p>Iâ€™m a London, Ontario based Project Manager. I am currently finishing up my fourth year of Media Theory and Production with a focus on Interactive Media Design at Western and Fanshawe. I have a passion for taking the ideas inside your head and making them a reality. With careful panning and lots of inspiration, creating something awesome becomes easy. Organization and timelines are what I do best, along with telling the best jokes, although that might still be up for debate. </p>
        </div>
      </div>
    </section>
    <!-- ABOUT ENDS -->


<!-- VIDEO STARTS -->
    <section class="grid-container full" id="vidSection">
      <div class="grid-x">
        <div class="cell small-12" id="video">
          <h2 class="hide">Video</h2>
          <div id="videoBox">
            <video poster="images/vid_poster.png">
              <source src="video/promoReel.mp4" type="video/mp4">
              {{!-- <source src="video/thermosecure_video.ogg" type="video/ogg">
              <source src="video/thermosecure_video.webm" type="video/webm"> --}}
              Sorry, your browser doesn't support video.
            </video>
            <div class="controls">
              <img src="images/rewind.png" class="rewind" alt="rewind video">
              <img src="images/play.png" class="pause" alt="pause video">
              <img src="images/mute.png" class="mute" alt="mute video">
              <img src="images/replay.png" class="replay" alt="replay video">
            </div>
          </div>
        </div>
      </div>
    </section>
<!-- VIDEO ENDS -->

<!-- PORTFOLIO STARTS -->
<section id="section3">
    <div class="user-panel-heading">
    <h2>My Current Favourites</h2>
</div>

    <div class="team">
        <!-- loop through all our team members and put their info on the page -->
        <!-- this is exactly like a forEach loop with plain JS -->
        {{#each songs}}
        <div class="user-panel">
            <img class="u-image" src="images/{{ Image }}" alt="image">

            <a class="u-link" href="{{ ID }}">
                See More Info
            </a>

            <h1>{{Song}}</h1>
            <h3>{{Artist}}</h3>
            </div>

        {{/each}}
    </div>
    </div>

    <!-- this will be filled in on the client side when we render our AJAX data -->
    <section class="lightbox">
        <span class="close">x</span>
        <div class="sidebar">
            <img src="" alt="larger bio image">
        </div>

        <div class="lb-content">

            

        </div>
    </section>
</section>
<!-- PORTFOLIO ENDS -->

<!-- CONTACT STARTS -->
<a id="contactLink"></a>
    <section class="grid-container full" id="contactSection">
      <div class="grid-x">
<form action="" class="cell large-12" id="contactForm">
    <label for="usermail">Please enter your email address:</label>
    <input type="email" name="usermail" required>

    <label for="name">Please enter your company name (optional)</label>
    <input type="text" name="company">

    <label for="message">Please enter your message:</label>
    <textarea name="message" id="user-message" cols="30" rows="10"></textarea>

    <input type="submit" value="Send!" class="submit-button">
</form>
</div>
<!-- CONTACT ENDS -->

<!-- FOOTER -->
    <section class="grid-container full" id="mainFooter">
      <div class="grid-x">
        <div class="backTop">
          <a href="">^ Back to top</a>
        </div>
        <div class="cell large-12">
          <p>Copyright 2019, Courtney Topping. All Rights Reserved.</p>
        </div>
      </div>
    </section>
<!-- FOOTER ENDS-->

    <script src="js/vendor/jquery.js"></script>
    <script src="js/vendor/what-input.js"></script>
    <script src="js/vendor/foundation.js"></script>
    <script src="js/video.js"></script>
    <script src="js/main.js"></script>
  </body>
</html>
